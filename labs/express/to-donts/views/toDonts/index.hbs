<h1> To Donts</h1>
<ul>
    {{#each toDonts}}
        <li>Description: {{description}}</li>
        <li>Urgent: {{urgent}}</li>
        <br>
        <div><a href="/toDonts/{{@index}}/edit">Edit</a></div>
        <form action="/toDonts/{{@index}}?_method=DELETE" method="POST">
            <input type="submit" value="DELETE"/>
            <br>
        </form>
    {{/each}}
</ul>

<a href="/toDonts/new">Create A To Dont</a>